<h1>Edit Blog Detail</h1>

<%= form_for @feed, :url =>{:action => "update", :id =>@feed} do |f| %>

<p>Title: <%= f.text_field 'title' %></p>

<p>Category: <%= f.collection_select :category_id, Category.all, :id, :title %></p>
<p>Description<br/>

<%= f.text_area 'text' %></p>
<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'list' } %>